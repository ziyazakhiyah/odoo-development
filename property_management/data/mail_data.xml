<?xml version="1.0" encoding="utf-8" ?>
<odoo noupdate="1">
        <record id="contract_confirmation_email_template" model="mail.template">
            <field name="name">Contract: Confirmation</field>
            <field name="model_id" ref="property_management.model_contract"/>
            <field name="email_from">{{ object.create_uid.email_formatted }}</field>
            <field name="partner_to">{{ object.tenant_id.id }}</field>
            <field name="subject">Confirmation of contract (Ref {{ object.reference }})</field>
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px;">
                    <p style="margin: 0px; padding: 0px; font-size: 13px;">
                        Dear <t t-out="object.tenant_id.name">Deco Addict</t>,
                        Your contract with reference <t t-out="object.reference">R001</t> has been confirmed!
                    </p>
                </div>
            </field>
        </record>

        <record id="contract_closing_email_template" model="mail.template">
            <field name="name">Contract: Closing</field>
            <field name="model_id" ref="property_management.model_contract"/>
            <field name="email_from">{{ object.create_uid.email_formatted }}</field>
            <field name="partner_to">{{ object.tenant_id.id }}</field>
            <field name="subject">Closing of contract (Ref {{ object.reference }})</field>
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px;">
                    <p style="margin: 0px; padding: 0px; font-size: 13px;">
                        Dear <t t-out="object.tenant_id.name">Deco Addict</t>,
                        Your contract with reference <t t-out="object.reference">R001</t> has been closed!
                    </p>
                </div>
            </field>
        </record>

        <record id="contract_expiry_email_template" model="mail.template">
            <field name="name">Contract: Expired</field>
            <field name="model_id" ref="property_management.model_contract"/>
            <field name="email_from">{{ object.create_uid.email_formatted }}</field>
            <field name="partner_to">{{ object.tenant_id.id }}</field>
            <field name="subject">Expiry of contract (Ref {{ object.reference }})</field>
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px;">
                    <p style="margin: 0px; padding: 0px; font-size: 13px;">
                        Dear <t t-out="object.tenant_id.name">Deco Addict</t>,
                        Your contract with reference <t t-out="object.reference">R001</t> has expired!
                    </p>
                </div>
            </field>
        </record>

        <record id="payment_due_email_template" model="mail.template">
            <field name="name">Contract: Payment Due</field>
            <field name="model_id" ref="property_management.model_contract"/>
            <field name="email_from">{{ object.create_uid.email_formatted }}</field>
            <field name="partner_to">{{ object.tenant_id.id }}</field>
            <field name="subject">Payment of contract (Ref {{ object.reference }})</field>
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px;">
                    <p style="margin: 0px; padding: 0px; font-size: 13px;">
                        Dear <t t-out="object.tenant_id.name">Deco Addict</t>,
                        This is to remind you that the payment for your contract with reference <t
                            t-out="object.reference">R001
                    </t> was due on
                        <t t-out="object.end_date"></t>. Please ensure that timely payment is done.
                    </p>
                </div>
            </field>
        </record>
</odoo>