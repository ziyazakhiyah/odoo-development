<?xml version="1.0" encoding="UTF-8" ?>
<odoo noupdate="1">
    <record id="ir_cron_check_contract_expiry" model="ir.cron">
        <field name="name">Check Contract Expiry</field>
        <field name="model_id" ref="property_management.model_contract"/>
        <field name="state">code</field>
        <field name="code">model.check_and_mark_expired()</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="active">True</field>
    </record>

    <record id="ir_cron_reminder_payment_due" model="ir.cron">
        <field name="name">Send Reminders for Overdue Payments</field>
        <field name="model_id" ref="property_management.model_contract"/>
        <field name="state">code</field>
        <field name="code">model.reminder_payment_due()</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="active">True</field>
    </record>
</odoo>
