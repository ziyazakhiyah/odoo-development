<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="account_move_form" model="ir.ui.view">
        <field name="name">account.move.form.inherit.contract</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='delivery_date']" position="after">
                <field name="contract_id"/>
            </xpath>
        </field>
    </record>

    <record id="account_invoice_list" model="ir.ui.view">
        <field name="name">account.invoice.list.inherit.contract</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_invoice_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='invoice_date']" position="after">
                <field name="contract_id"/>
            </xpath>
        </field>
    </record>

    <record id="account_invoice_select" model="ir.ui.view">
        <field name="name">account.invoice.select.inherit.contract</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_account_invoice_filter"/>
        <field name="arch" type="xml">
            <xpath expr="//search" position="inside">
                <filter string="Rent/Lease Invoices" name="filter_rental_invoices"
                        domain="[('contract_id', '!=', False),('move_type', '=', 'out_invoice')]"/>
            </xpath>
        </field>
    </record>

    <record id="action_property_management_invoices" model="ir.actions.act_window">
        <field name="name">Invoices</field>
        <field name="res_model">account.move</field>
        <field name="view_mode">list,form,search</field>
        <field name="context">{'search_default_filter_rental_invoices':1}</field>
    </record>

</odoo>