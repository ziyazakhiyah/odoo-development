<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="property_list_view" model="ir.ui.view">
        <field name="name">property.list.view</field>
        <field name="model">property</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="state_property"/>
                <field name="owner_id"/>
                <field name="built_date"/>
                <field name="can_be_sold"/>
                <field name="legal_amount"/>
                <field name="rent"/>
                <field name="facilities_ids" widget="many2many_tags"/>
            </list>
        </field>
    </record>

    <record id="property_form_view" model="ir.ui.view">
        <field name="name">property.form.view</field>
        <field name="model">property</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="state_property" widget="statusbar" options="{'clickable':'1'}"/>
                </header>
                <sheet>
                    <widget name="web_ribbon" title="Archived" bg_color="text-bg-danger" invisible="active"/>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_open_rental_contracts" type="object" class="oe_stat_button" icon="fa-book">
                            <div class="o_stat_info">
                                <span class="o_stat_value">
                                    <field name="number_related_contracts"/>
                                </span>
                                <span class="o_stat_text">Contracts</span>
                            </div>
                        </button>
                    </div>
                    <field name="property_image" widget="image" class="oe_avatar" nolabel="1"/>
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <br></br>
                    <group>
                        <group>
                            <div class="o_address_format">
                                <field name="city" class="o_address_city" placeholder="City"/>
                                <field name="state_id" class="o_address_state" placeholder="State"/>
                                <field name="country_id" class="o_address_country" placeholder="Country"/>
                                <field name="active" invisible="1"/>
                            </div>
                            <field name="owner_id"/>
                            <field name="facilities_ids" widget="many2many_tags"/>
                        </group>
                        <group>
                            <field name="built_date"/>
                            <field name="can_be_sold"/>
                            <field name="legal_amount" widget="monetary"/>
                            <field name="rent" widget="monetary"/>
                        </group>
                    </group>
                    <notebook>
                        <page name="Description">
                            <field name="description"/>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <record id="property_view_search" model="ir.ui.view">
        <field name="name">property.view.search</field>
        <field name="model">property</field>
        <field name="arch" type="xml">
            <search string="Search for properties">
                <field name="name"/>
                <filter string="Can be Sold" name="filter_can_be_sold"
                        domain="[('can_be_sold', '=', 'True')]"/>
                <filter string="Country" name="group_by_country" context="{'group_by':'country_id'}"/>
                <filter string="State" name="group_by_state" context="{'group_by':'state_id'}"/>
                <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
            </search>
        </field>
    </record>

    <record id="action_property_management_property" model="ir.actions.act_window">
        <field name="name">Property</field>
        <field name="res_model">property</field>
        <field name="view_mode">list,form,search</field>
    </record>
</odoo>