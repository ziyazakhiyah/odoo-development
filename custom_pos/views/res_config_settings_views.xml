<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.pos</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="point_of_sale.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//block[@id='pos_payment_section']" position="inside">
                <setting help="Set Customer Due Limit">
                    <div class="setting">
                        <label for="customer_due_limit" string="Customer Due Limit"
                               class="setting"/>
                        <field name="customer_due_limit"/>
                    </div>
                </setting>
            </xpath>
        </field>
    </record>
</odoo>