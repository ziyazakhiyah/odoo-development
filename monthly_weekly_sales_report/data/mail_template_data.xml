<?xml version="1.0" encoding="utf-8"?>
<odoo noupdate="1">
    <record id="monthly_sales_report_email_template" model="mail.template">
        <field name="name">Monthly Sales Report</field>
        <field name="model_id" ref="base.model_res_partner"/>
        <field name="subject">Monthly Sales Report</field>
        <field name="body_html" type="html">
            <div style="margin: 0px; padding: 0px;">
                <p style="margin: 0px; padding: 0px; font-size: 13px;">
                    Dear <t t-out="object.name">Deco Addict</t>,
                    <br/>
                    Please find attached the monthly sales report for your reference.
                </p>
            </div>
        </field>
    </record>
    <record id="weekly_sales_report_email_template" model="mail.template">
        <field name="name">Weekly Sales Report</field>
        <field name="model_id" ref="base.model_res_partner"/>
        <field name="subject">Weekly Sales Report</field>
        <field name="body_html" type="html">
            <div style="margin: 0px; padding: 0px;">
                <p style="margin: 0px; padding: 0px; font-size: 13px;">
                    Dear <t t-out="object.name">Deco Addict</t>,
                    <br/>
                    Please find attached the weekly sales report for your reference.
                </p>
            </div>
        </field>
    </record>
</odoo>
